<Window x:Class="PromptPal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromptPal"
        mc:Ignorable="d"
        Title="PromptPal"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Width="600" Height="400"
        WindowStartupLocation="CenterScreen"
        Topmost="True" ShowInTaskbar="False"
        Visibility="Collapsed">
    <Border Background="{StaticResource PrimaryBackgroundBrush}" CornerRadius="12"
            BorderBrush="{StaticResource BorderBrushColor}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="20"/>
        </Border.Effect>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" x:Name="SearchBox"
                     TextChanged="SearchBox_TextChanged"
                     KeyUp="SearchBox_KeyUp"
                     Margin="0,0,0,10"
                     Tag="Rechercher vos prompts..." />
            <ListBox Grid.Row="1" x:Name="ResultsList"
                     ItemTemplate="{StaticResource PromptItemTemplate}"
                     ScrollViewer.CanContentScroll="False"
                     SelectionMode="Single"
                     KeyDown="ResultsList_KeyDown"/>
        </Grid>
    </Border>
</Window>
